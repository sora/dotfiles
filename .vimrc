syntax on
set nocompatible
set clipboard=unnamed
set number
set nobackup
set ignorecase
set smartcase
set noincsearch
set backspace=2

set autoindent
set expandtab
set tabstop<
set softtabstop=2
set shiftwidth=2

"set showmatch
let loaded_matchparen = 1
set wildmenu
set ruler
set list
set lcs=tab:>-,eol:$,trail:_,extends:\
set laststatus=2
set cmdheight=1
set showcmd
set title
set hlsearch
"set statusline=%<%f\ %m%r%h%w%{'['.(&fenc!=''?&fenc:&enc).']['.&ff.']'}%=%l,%c%V%8P
set scrolloff=2
set sidescrolloff=3

set autochdir
